<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".PerfilActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civUsuarioPerfil"
        android:layout_width="@dimen/perfilCircleImageSize"
        android:layout_height="@dimen/perfilCircleImageSize"
        android:layout_gravity="center"
        android:layout_margin="@dimen/perfilCircleMargins"
        android:src="@drawable/pets"
        app:civ_border="true"
        app:civ_border_width="@dimen/civ_width_border"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/colorAccent"
        app:civ_shadow_radius="10"
        />

    <TextView
        android:id="@+id/tvNombreUsuarioPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/perfilCircleMargins"
        android:text="@string/pnombre"
        android:textAlignment="center"
        android:textSize="@dimen/tv_nombre_usuario"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>

    <FrameLayout
        android:id="@+id/perfilFragmentPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPerfilUsuarioPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
    </FrameLayout>

</LinearLayout>