<LinearLayout android:id="@+id/fragmentPerfil"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.wmartinez.devep.petaretro.vista.PerfilFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civUsuario"
        android:layout_width="@dimen/perfilCircleImageSize"
        android:layout_height="@dimen/perfilCircleImageSize"
        android:layout_gravity="center"
        android:layout_margin="@dimen/perfilCircleMargins"
        android:src="@drawable/pets"
        app:civ_border="true"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="@dimen/civ_width_border"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/colorAccent"
        app:civ_shadow_radius="10"
        />

    <TextView
        android:id="@+id/tvNombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/perfilCircleMargins"
        android:text="@string/pnombre"
        android:textAlignment="center"
        android:textSize="@dimen/tv_nombre_usuario"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorPrimary"/>

    <FrameLayout
        android:id="@+id/perfilFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPerfilUsuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:scrollbars="vertical"/>
    </FrameLayout>
</LinearLayout>
